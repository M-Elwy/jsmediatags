{
  "compilerOptions": {
      "module": "ES2020",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "ES2022",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "removeComments": true,
      "baseUrl": ".",
      "paths": {
          "*": [
              "node_modules/*",
          ]
      }
  },
  "include": [
      "src/*"
  ]
}